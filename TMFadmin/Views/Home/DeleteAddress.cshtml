@model TMFadmin.Models.Address
<div class="text-center" style="margin-top: 100px;">
    <h1 class="display-4">Delete Address</h1>
    <div class="row" style="margin-bottom:20px;">
        <div class="col-sm-12">
            <div style="margin-bottom:10px">Are you sure you want to delete the following address ?</div>
            <p><b>
                @Model.firstname @Model.lastname
                <br>
                @Model.address
                <br>
                @Model.city, @Model.province
                <br>
                @Model.postal
                <br>
                @Model.country
            </b></p>
            <form method="post">
                <div class="form-group">
                    <input type="hidden" asp-for="addressId">
                    <input type="submit" asp-controller="Home" asp-action="DeleteAddressSubmit" class="btn btn-danger" value="Delete" />
                    <input type="submit" asp-controller="Home" asp-action="Index" class="btn btn-warning" value="Cancel" />
                </div>
            </form>
        </div>
</div>