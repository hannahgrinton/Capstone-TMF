@model TMFadmin.Models.RevenueManager
<div class="text-center" style="margin-top: 100px;">
    <h1 class="display-4">Addresses</h1>
    <table class="table table-hover table-striped" style="margin-top: 40px;">
        <thead class="thead-dark">
            <tr>
                <th scope="col">#</th>
                <th scope="col">First Name</th>
                <th scope="col">Last Name</th>
                <th scope="col">Address Created</th>
                <th scope="col">City</th>
                <th scope="col">Province</th>
                <th scope="col">Postal Code</th>
                <th scope="col">Country</th>
                <th scope="col">Type</th>
                <th scope="col">Options</th>
            </tr>
        </thead>
        <tbody>
            @{
                foreach (var item in Model.getAddressesById())
                {
                    <tr>
                        <td>@item.addressId</td>
                        <td>@item.firstname</td>
                        <td>@item.lastname</td>
                        <td>@item.address</td>
                        <td>@item.city</td>
                        <td>@item.province</td>
                        <td>@item.postal</td>
                        <td>@item.country</td>
                        <td>@item.type</td>
                        <td>
                            <form method="post">
                                <label class="ico-button"><i class="far fa-eye" style="font-size:20px;"></i><input type="submit" asp-controller="Home" asp-action="ViewAddress" value="@item.addressId" name="myAddressId" hidden></label>
                                <label class="ico-button"><i class="fas fa-pencil-alt" style="font-size:20px;"></i><input type="submit" asp-controller="Home" asp-action="EditAddress" value="@item.addressId" name="myAddressId" hidden></label>
                                <label class="ico-button"><i class="fas fa-trash-alt" style="font-size:20px;"></i><input type="submit" asp-controller="Home" asp-action="DeleteAddress" value="@item.addressId" name="myAddressId" hidden></label>
                            </form>
                            
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>