@model TMFadmin.Models.SettingsManager
<div class="text-center" style="margin-top: 100px;">
    <h1 class="display-4"><a onclick="history.go(-1)" style="cursor: pointer;" class="text-primary"><i class="fas fa-arrow-left" style="font-size: 34px; float: left;"></i></a>Settings</h1>
    <div class="container" style="text-align: left;">
        <div class="text-secondary" style="font-size: 28px; margin-bottom: 10px;"><i class="fas fa-users-cog"></i>&nbsp;Edit Users</div>
        @for(int u = 0; u < Model.users.Count(); u++) {
            @if(Model.users[u] == Model.currentUser){
                <div class="alert alert-secondary row">
                    <div class="col"><i class="fas fa-user"></i>&nbsp;@Model.users[u]&nbsp;<small class="text-warning">Current User</small></div>
                    <div class="col">Role: @Model.userRoles[u]</div>
                    <div class="col" style="text-align: right;">
                        <a class="text-primary" asp-controller="Home" asp-action="EditUser" asp-route-userId="@Model.userIds[u]">Edit</a>
                    </div>
                </div>
            } else {
                <div class="alert alert-secondary row">
                    <div class="col"><i class="fas fa-user"></i>&nbsp;@Model.users[u]</div>
                    <div class="col">Role: @Model.userRoles[u]</div>
                    <div class="col" style="text-align: right;">
                        <a class="text-primary" asp-controller="Home" asp-action="EditUser" asp-route-userId="@Model.userIds[u]">Edit</a>&nbsp;
                        <a class="text-danger" asp-controller="Home" asp-action="DeleteUser" asp-route-userId="@Model.userIds[u]">Delete</a>
                    </div>
                </div>
            }
            
        }
        <a asp-controller="Home" asp-action="AddUser"><i class="fas fa-user-plus" style="margin-right: 5px;"></i>Add User</a>
        <div class="text-secondary" style="font-size: 28px; margin-top: 40px; margin-bottom: 10px;"><i class="fas fa-chalkboard-teacher"></i>&nbsp;Tutorials</div>
        <div class="d-flex justify-content-around card-container--mod">
            <div class="card card--mod" style="width: 18rem;">
                <div class="card-body card-body--mod text-center">
                    <h5 class="card-title">Managing Contacts</h5>
                    <a href="https://www.loom.com/share/87dd28846135433da178797918a41f80" target="_blank" class="btn btn-primary">Go</a>
                </div>
                
            </div>
            <div class="card card--mod" style="width: 18rem;">
                <div class="card-body card-body--mod text-center">
                    <h5 class="card-title">Managing Donations</h5>
                    <a href="https://www.loom.com/share/822449f47911457b8cadf1f7ba4c8265" target="_blank" class="btn btn-primary">Go</a>
                </div>
            </div>
            <div class="card card--mod" style="width: 18rem;">
                <div class="card-body card-body--mod text-center">
                    <h5 class="card-title">Managing Adverts</h5>
                    <a href="https://www.loom.com/share/4e44eb9f1a4a4f34a34edd14fab93829" target="_blank" class="btn btn-primary">Go</a>
                </div>
            </div>
            <div class="card card--mod" style="width: 18rem;">
                <div class="card-body card-body--mod text-center">
                    <h5 class="card-title">Funds & Awards</h5>
                    <a href="https://www.loom.com/share/b6f353b991a6485b8bfc904bb9e55a41" target="_blank" class="btn btn-primary">Go</a>
                </div>
            </div>
            <div class="card card--mod" style="width: 18rem;">
