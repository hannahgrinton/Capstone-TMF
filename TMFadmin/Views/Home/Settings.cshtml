@model TMFadmin.Models.SettingsManager
<div class="text-center" style="margin-top: 100px;">
    <h1 class="display-4"><a onclick="history.go(-1)" style="cursor: pointer;" class="text-primary"><i class="fas fa-arrow-left" style="font-size: 34px; float: left;"></i></a>Settings</h1>
    <div class="container" style="text-align: left;">
        <div class="text-secondary" style="font-size: 28px"><i class="fas fa-users-cog"></i>&nbsp;Edit Users</div>
        @for(int u = 0; u < Model.users.Count(); u++) {
            @if(Model.users[u] == Model.currentUser){
                <div class="alert alert-secondary row">
                    <div class="col"><i class="fas fa-user"></i>&nbsp;@Model.users[u]&nbsp;<small class="text-warning">Current User</small></div>
                    <div class="col">Role: @Model.userRoles[u]</div>
                    <div class="col" style="text-align: right;">
                        <a class="text-primary" asp-controller="Home" asp-action="EditUser" asp-route-userId="@Model.userIds[u]">Edit</a>
                    </div>
                </div>
            } else {
                <div class="alert alert-secondary row">
                    <div class="col"><i class="fas fa-user"></i>&nbsp;@Model.users[u]</div>
                    <div class="col">Role: @Model.userRoles[u]</div>
                    <div class="col" style="text-align: right;">
                        <a class="text-primary" asp-controller="Home" asp-action="EditUser" asp-route-userId="@Model.userIds[u]">Edit</a>&nbsp;
                        <a class="text-danger" asp-controller="Home" asp-action="DeleteUser" asp-route-userId="@Model.userIds[u]">Delete</a>
                    </div>
                </div>
            }
            
        }
        <a asp-controller="Home" asp-action="AddUser"><i class="fas fa-user-plus" style="margin-right: 5px;"></i>Add User</a>
    </div>
</div>