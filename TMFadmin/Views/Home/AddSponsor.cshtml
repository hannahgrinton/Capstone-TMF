@model TMFadmin.Models.RevenueManager
<div class="text-center" style="margin-top: 100px;">
    <h1 class="display-4"><a asp-controller="Home" asp-action="ViewSponsors" class="text-primary"><i class="fas fa-arrow-left" style="font-size: 34px; float: left;"></i></a>Add Contact</h1>
    <div class="container text-center">
        <form style="width: 100%; display: flex; flex-flow: column nowrap; align-items: center;">
            <div class="accordian text-center" role="tablist" id="accordion-1" style="width: 550px; align-self: center;">
                <div class="card">
                    <div class="card-header" role="tab">
                        <h5 class="mb-0">
                            <button class="btn btn-link" type="button" data-toggle="collapse" data-target="#item-1" aria-expanded="true" aria-controls="accordion-1">
                                Contact Information
                            </button>
                        </h5>
                    </div>
                    <div class="collapse show item-1" role="tabpanel" data-parent="#accordion-1" id="item-1">
                        <div class="card-body">
                            <div class="form-group" style="text-align: left;">
                                <label id="lblCompany" for="txtCompany"><i class="fas fa-id-card" style="font-size: 22px;"></i>&nbsp;Name (Company/Individual)</label>
                                <input class="form-control" type="text" id="txtCompany" maxlength="200" name="company">
                            </div>
                            <div class="form-row form-group">
                                <div class="col" style="text-align: left;">
                                    <label id="lblPhone" for="txtPhone"><i class="fas fa-phone" style="font-size: 22px;"></i>&nbsp;Phone</label>
                                    <input class="form-control" type="tel" id="txtPhone" maxlength="14" name="phone">
                                </div>
                                <div class="col" style="text-align: left;">
                                    <label id="lblFax" for="txtFax"><i class="fas fa-fax" style="font-size: 22px;"></i>&nbsp;Fax</label>
                                    <input class="form-control" type="tel" id="txtFax" maxlength="14" name="fax">
                                </div>
                            </div>
                            
                            <div class="form-group" style="text-align: left;">
                                <label id="lblEmail" for="txtEmail"><i class="fas fa-envelope" style="font-size: 22px;"></i>&nbsp;Email</label>
                                <input class="form-control" type="email" id="txtEmail" maxlength="70">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card">
                    <div class="card-header" role="tab">
                        <h5 class="mb-0">
                            <button class="btn btn-link" type="button" data-toggle="collapse" data-target="#item-2" aria-expanded="true" aria-controls="accordion-1">
                                Address
                            </button>
                    </div>
                    <div class="collapse item-2" role="tabpanel" data-parent="#accordion-1" id="item-2">
                        <div class="card-body">
                            <div class="form-group"><label for="txtAddress">Street Address</label><input class="form-control" type="text" id="txtAddress" name="address" maxlength="50"></div>
                            <div class="form-group"><label id="lblCity" for="txtCity">City</label><input class="form-control" type="text" id="txtCity" name="city" maxlength="30"></div>
                            <div class="form-group"><label id="lblProvince" for="txtProvince">Province</label><input class="form-control" type="text" id="txtProvince" name="province" maxlength="30"></div>
                            <div class="form-group"></div><label id="lblPostal" for="txtPostal" name="postal">Postal Code</label><input class="form-control" type="text" id="txtPostal" name="postal">
                            <div class="form-group"><label id="lblCountry" for="txtCountry">Country</label><input class="form-control" type="text" id="txtCountry" name="country" maxlength="30"></div>
                            <div class="form-group"><label>Address Type</label>
                                <div class="form-check"><input class="form-check-input" type="radio" id="chkRes" name="addressType" value="residential"><label class="form-check-label" for="formCheck-1">Residential</label></div>
                                <div class="form-check"><input class="form-check-input" type="radio" id="chkBus" name="addressType" value="business"><label class="form-check-label" for="formCheck-2">Business</label></div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card">
                    <div class="card-header" role="tab">
                        <h5 class="mb-0">
                            <button class="btn btn-link" type="button" data-toggle="collapse" data-target="#item-3" aria-expanded="true" aria-controls="accordion-1">
                                Additional
                            </button>
                    </div>
                    <div class="collapse item-3" role="tabpanel" data-parent="#accordion-1" id="item-3">
                        <div class="card-body">
                            <div class="form-group"><label id="lblNotes" for="txtNotes">Notes</label><textarea class="form-control" id="txtNotes" name="notes" maxlength="255"></textarea></div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group" style="width: 580px;"><button style="margin:15px; float: right;" class="btn btn-primary btn-submit" type="button">Add Contact</button></div>
        </form>
    </div>
</div>