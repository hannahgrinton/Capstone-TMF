@model TMFadmin.Models.RevenueManager
<div class="text-center" style="margin-top: 100px;">
    <h1 class="display-4">Add Fund</h1>
    <div class="container">

        
    <form>
        <div role="tablist" id="accordion-1">
            <div class="card">
                <div class="card-header  accHead" role="tab">
                    <h5 style="color:white" class="mb-0">Fund</h5>
                </div>
                <div class="collapse show item-1" role="tabpanel" data-parent="#accordion-1">
                    <div class="card-body">
                        <div class="form-group"><label id="lblName" for="txtName">Fund Name</label><input class="form-control" type="text" id="txtAmount" name="Name"></div>
                        <div class="form-group"><label id="txtAmount" name="Amount">Creator</label><input class="form-control" type="text" id="lblDate" for="sltDate"></div>
                        <div class="form-group"><label id="lblDate" for="sltDate">Date Created</label><input class="form-control" id="sltDate" type="date" name="Date"></div>
                        <div class="form-group"><label>Notes</label><textarea class="form-control" id="txtNotes" name="Notes" maxlength="255"></textarea></div>
                        <div class="form-group"><button class="btn btn-primary" type="submit">Add Fund</button></div>
                    </div>
                </div>
            </div>
        </div>
    </form>
    </div>
</div>