@model TMFadmin.Models.Fund
<div class="text-center" style="margin-top: 100px;">
    <h1 class="display-4"><a asp-controller="Home" asp-action="ViewFunds" style="cursor: pointer;" class="text-primary"><i class="fas fa-arrow-left" style="font-size: 34px; float: left;"></i></a>Edit Fund</h1>
    <div class="container text-center">
        <form style="width: 100%; display: flex; flex-flow: column nowrap; align-items: center;" method="post" asp-controller="Home" asp-action="EditFundSubmit">
            <div role="tablist" id="fundAccordion" class="accordion text-center" style="width: 550px; align-self: center;">
                <div class="card">
                    <div class="card-header" role="tab">
                        <h5 class="mb-0">
                            <button class="btn btn-link" type="button" data-toggle="collapse" data-target="#fundInfo" aria-expanded="true" aria-controls="fundAccordion">
                                Fund Information
                            </button>
                        </h5>
                    </div>
                    <div class="collapse show" role="tabpanel" data-parent="#fundAccordion" id="fundInfo">
                        <div class="card-body">
                            <div class="form-group" style="text-align: left;">
                                <label for="fundName"><i class="fas fa-funnel-dollar" style="font-size: 22px;"></i>&nbsp;Fund Name</label>
                                <input class="form-control" type="text" id="fundName" asp-for="fundName" name="fundName" maxlength="200" placeholder="Name of Fund to be added">
                                <span asp-validation-for="fundName" class="text-danger" />
                            </div>
                            <div class="form-group" style="text-align: left;">
                                <label for="creator"><i class="fas fa-user-tie" style="font-size: 22px;"></i>&nbsp;Creator</label>
                                <input class="form-control" type="text" id="creator" name="creator" asp-for="creator" maxlength="100" placeholder="Name of Fund Creator, if applicable">
                                <span asp-validation-for="creator" class="text-danger" />
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card">
                    <div class="card-header" role="tab">
                        <h5 class="mb-0">
                            <button class="btn btn-link" type="button" data-toggle="collapse" data-target="#addInfo" aria-expanded="false" aria-controls="fundAccordion">
                                Additional Information
                            </button>
                        </h5>
                    </div>
                    <div role="tabpanel" class="collapse" data-parent="#fundAccordion" id="addInfo">
                        <div class="card-body">
                            <div class="form-group" style="text-align: left;">
                                <label for="dateCreated"><i class="far fa-calendar-alt" style="font-size: 22px;"></i>&nbsp;Date Created</label>
                                <input class="form-control" id="dateCreated" type="date" name="dateCreated" asp-for="dateCreated">
                                <span asp-validation-for="dateCreated" class="text-danger" />
                            </div>
                            <div class="form-group" style="text-align: left;">
                                <label for="notes"><i class="far fa-clipboard" style="font-size: 22px;"></i>&nbsp;Notes</label>
                                <textarea class="form-control" asp-for="notes" type="text" id="txtNote" name="notes" maxlength="250" rows="4"></textarea>
                                <span asp-validation-for="notes" class="text-danger" />
                            </div>
                        </div>
                    </div>
                </div>

            </div>
            <div class="form-group" style="width: 580px;">
                <input type="hidden" asp-for="fundId">
                <input style="margin:15px; float: right;"
                    class="btn btn-primary btn-submit" 
                    type="submit" value="Save Edits">
            </div>
        </form>
    </div>
</div>