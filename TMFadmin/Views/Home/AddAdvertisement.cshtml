@model TMFadmin.Models.RevenueManager
<div class="text-center" style="margin-top: 100px;">
    <h1 class="display-4">Add Advertisement</h1>
    <div class="container">

    
    <form>
        <div role="tablist" id="accordion-1">
            <div class="card">
                <div class="card-header accHead" role="tab">
                    <h5 class="mb-0"><a style="color:white" data-toggle="collapse" aria-expanded="true" aria-controls="accordion-1 .item-1" href="#accordion-1 .item-1">Ad Details</a></h5>
                </div>
                <div class="collapse show item-1" role="tabpanel" data-parent="#accordion-1">
                    <div class="card-body">
                        <div class="form-group"><label for="sltAdvertiser">Advertiser</label><select class="form-control"><option value="">This Advertiser</option></select></div>
                        <div
                            class="form-group"><label for="sltDate">Date</label><input class="form-control" name="Date"></div>
                    <div class="form-group"><label id="lblSize">Ad Size</label>
                        <div class="form-check"><input class="form-check-input" type="radio" id="formCheck-2" name="adSize"><label class="form-check-label" for="radSize1">Size 1</label></div>
                        <div class="form-check"><input class="form-check-input" type="radio" id="formCheck-1" name="adSize"><label class="form-check-label" for="radSize2">Size 2</label></div>
                        <div class="form-check"><input class="form-check-input" type="radio" id="radSize3" name="adSize"><label class="form-check-label" id="lblSize3" for="radSize3">Size 3</label></div>
                    </div>
                    <div class="form-group"><input type="file" id="imgFile" name="imgFile"></div>
                    <div class="form-group"><label for="txtNotes">Notes</label><textarea class="form-control" id="txtNotes"></textarea></div>
                </div>
            </div>
        </div>
        <div class="card">
            <div class="card-header accHead" role="tab">
                <h5 class="mb-0"><a style="color:white" data-toggle="collapse" aria-expanded="false" aria-controls="accordion-1 .item-2" href="#accordion-1 .item-2">Transaction</a></h5>
            </div>
            <div class="collapse item-2" role="tabpanel" data-parent="#accordion-1">
                <div class="card-body">
                    <div class="form-group"><label for="txtTotal">Total Cost</label><input class="form-control" type="text"></div>
                    <div class="form-group"><label for="txtPaid">Amount Paid</label><input class="form-control" type="text" id="txtPaid" name="Paid"></div>
                    <div class="form-group"><label for="txtDue">Amount Due</label><input class="form-control" type="text" id="txtDue" name="Due"></div>
                </div>
            </div>
        </div>
        </div>
        <div class="form-group"><button class="btn btn-primary" type="submit">Add Ad</button></div>
    </form>
    </div>
</div>