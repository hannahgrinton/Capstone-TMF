@model TMFadmin.Models.Address
<div class="text-center" style="margin-top: 100px;">
    <h1 class="display-4"><a onclick="history.go(-1)" style="cursor: pointer;" class="text-primary"><i class="fas fa-arrow-left" style="font-size: 34px; float: left;"></i></a>Add Address</h1>
    <div class="container text-center">
        <form style="width: 100%; display: flex; flex-flow: column nowrap; align-items: center;" method="post" asp-controller="Home" asp-action="AddAddressSubmit">
            <div class="accordian text-center" role="tablist" id="addressAccordian" style="width: 550px; align-self: center;">
                <div class="card">
                    <div class="card-header" role="tab">
                        <h5 class="mb-0">
                            <button class="btn btn-link" type="button" data-toggle="collapse" data-target="#sponInfo" aria-expanded="true" aria-controls="addressAccordian">
                                Sponsor Information
                            </button>
                        </h5>
                    </div>
                    <div id="sponInfo" role="tabpanel" class="collapse show" data-parent="#addressAccordian">
                        <div class="card-body">
                            <div class="form-group" style="text-align: left;">
                                <label for="mySponsorId"><i class="far fa-address-card" style="font-size: 22px;"></i>&nbsp;Select Contact to Add Address to:</label>
                                <div class="form-group">
                                    <select id="lstSponsor" name="mySponsorId" asp-items="ViewBag.selectList" class="btn btn-dark form-control"></select>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card">
                    <div class="card-header" role="tab">
                        <h5 class="mb-0">
                            <button class="btn btn-link" type="button" data-toggle="collapse" data-target="#addInfo" aria-expanded="false" aria-controls="addressAccordian">
                                Address Information
                            </button>
                        </h5>
                    </div>
                    <div role="tabpanel" class="collapse" data-parent="#addressAccordian" id="addInfo">
                        <div class="card-body">
                            <div class="form-row form-group">
                                <div class="col" style="text-align: left;">
                                    <label id="lblFirstName" for="txtFirstName">First Name</label>
                                    <input class="form-control" type="text" id="txtFirstName" name="firstName" maxlength="50">
                                </div>
                                <div class="col" style="text-align: left;">
                                    <label id="lblLastName" for="txtLastName">Last Name</label>
                                    <input class="form-control" type="text" id="txtLastName" name="lastName" maxlength="50">
                                </div>
                            </div>
                            <div class="form-group" style="text-align: left;">
                                <label for="txtAddress"><i class="fas fa-building" style="font-size: 22px;"></i>&nbsp;Street Address</label>
                                <input class="form-control" type="text" id="txtAddress" name="address" maxlength="50">
                            </div>
                            <div class="form-row form-group">
                                <div class="col" style="text-align: left;">
                                    <label id="lblCity" for="txtCity"><i class="fas fa-city" style="font-size: 22px;"></i>&nbsp;City</label>
                                    <input class="form-control" type="text" id="txtCity" name="city" maxlength="30">
                                </div>
                                <div class="col-md-5" style="text-align: left;">
                                    <label id="lblProvince" for="txtProvince"><i class="fas fa-map-marked-alt" style="font-size: 22px;"></i>&nbsp;Province</label>
                                    <input class="form-control" type="text" id="txtProvince" name="province" maxlength="30">
                                </div>
                            </div>
                            <div class="form-row form-group">
                                <div class="col-md-4" style="text-align: left;">
                                    <label id="lblPostal" for="txtPostal" name="postal"><i class="fas fa-mail-bulk" style="font-size: 22px;"></i>&nbsp;Postal Code</label>
                                    <input class="form-control" type="text" id="txtPostal" name="postal">
                                </div>
                                <div class="col" style="text-align: left;">
                                    <label id="lblCountry" for="txtCountry"><i class="fas fa-globe-americas" style="font-size: 22px;"></i>&nbsp;Country</label>
                                    <input class="form-control" type="text" id="txtCountry" name="country" maxlength="30">
                                </div>
                            </div>
                            <div class="form-group" style="text-align: left;">
                                <div ><label><i class="fas fa-envelope" style="font-size: 22px;"></i>&nbsp;Address Type</label></div>
                                <div class="form-check form-check-inline">
                                    <input class="form-check-input" type="radio" id="chkRes" name="addressType" value="mailing">
                                    <label class="form-check-label" for="formCheck-1">Residential</label>
                                </div>
                                <div class="form-check form-check-inline">
                                    <input class="form-check-input" type="radio" id="chkBusi" name="addressType" value="business">
                                    <label class="form-check-label" for="formCheck-2">Business</label>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group" style="width: 580px;">
                <input style="margin:15px; float: right;"
                    class="btn btn-primary btn-submit" 
                    type="submit" value="Add Address">
            </div>
        </form>
    </div>
</div>