@model TMFadmin.Models.RevenueManager
<div class="text-center" style="margin-top: 100px;">
    <h1 class="display-4">Add Donation</h1>
    <div class="container">

        
    <form>
        <div role="tablist" id="accordion-1">
            <div class="card">
                <div class="card-header  accHead" role="tab">
                    <h5 style="color:white" class="mb-0">Donation</h5>
                </div>
                <div class="collapse show item-1" role="tabpanel" data-parent="#accordion-1">
                    <div class="card-body">
                    <div class="form-group">
                        <label id="sltDonor" for="sltDonor">Donor</label>
                        <select class="form-control" id="sltDonor" name="Donor">
                            <option value="" selected="">This Donor Name</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label id="lblFund" for="sltFund">Fund</label>
                        <select class="form-control" id="sltFund" name="Fund">
                            <option value="">This Fund Name</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="txtAmount">Amount</label>
                        <input class="form-control" type="text" id="txtAmount" name="Amount">
                    </div>
                    
                    <div class="form-group">
                        <label id="lblDate" for="sltDate">Date</label>
                        <input class="form-control" id="sltDate" type="date" name="Date">
                    </div>
                    <div class="form-group">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="chkReceipt">
                            <label class="form-check-label" for="chkReceipt">Receipt Sent?</label>
                        </div>
                    </div>
                    <div class="form-group">
                        <label id="lblNote" for="txtNote">Notes</label>
                        <textarea class="form-control" type="text" id="txtNote" name="Note" maxlength="255"></textarea>
                    </div>
            
                    <div class="form-group">
                        <button class="btn btn-primary" type="submit">Add Donation</button>
                    </div>
                </div>
            </div>
        </div>
        </div>
    </form>
    </div>
</div>